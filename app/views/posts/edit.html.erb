<h1 class="text-2xl md:text-3xl mb-4 font-bold text-gray-800 dark:text-gray-100 text-center md:text-left">
  Edit Post
</h1>

<div class="w-full md:w-[60%] lg:w-[40%] mx-auto bg-white dark:bg-gray-800 p-4 md:p-6 shadow-md rounded-lg">
  <%= simple_form_for @post do |f| %>
    <!-- Photo Input -->
    <div class="mb-4">
      <%= f.label :photo, 'Photo', class: 'block text-sm font-medium text-gray-700 dark:text-gray-200' %>
      <%= f.input :photo, label: false, input_html: { class: 'mt-1 block w-full text-sm text-gray-900 dark:text-gray-300 dark:bg-gray-700 rounded-lg border-gray-300 dark:border-gray-600 shadow-sm focus:ring-blue-500 focus:border-blue-500' } %>
    </div>

    <!-- Description Input -->
    <div class="mb-4">
      <%= f.label :description, 'Description', class: 'block text-sm font-medium text-gray-700 dark:text-gray-200' %>
      <%= f.input :description, label: false, input_html: { rows: 6, class: 'mt-1 block w-full p-2.5 text-sm text-gray-900 dark:text-gray-300 dark:bg-gray-700 rounded-lg border border-gray-300 dark:border-gray-600 shadow-sm focus:ring-blue-500 focus:border-blue-500' } %>
    </div>

    <!-- Submit Button -->
    <div class="text-center">
      <%= f.submit 'Update Post', class: 'w-full md:w-auto text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800' %>
    </div>
  <% end %>
</div>
