<h1 class="text-3xl font-bold text-center mb-6">Create a New Post</h1>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-lg">
  <%= simple_form_for @post, html: { class: 'space-y-6' } do |f| %>
    
    <div>
      <%= f.input :photo, label: 'Upload Photo', label_html: { class: 'block text-gray-700 font-medium mb-2' }, input_html: { class: 'border border-gray-300 rounded-md p-2 w-full' } %>
    </div>

    <div>
      <%= f.input :description, 
                  label: 'Description', 
                  label_html: { class: 'block text-gray-700 font-medium mb-2' }, 
                  input_html: { rows: 6, class: 'border border-gray-300 rounded-md p-2 w-full resize-none' } %>
    </div>

    <div>
      <%= f.submit 'Post', class: 'w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg px-4 py-2 transition duration-200' %>
    </div>
    
  <% end %>
</div>
