<%= turbo_frame_tag dom_id(comment) do %>
  <div class="flex justify-between items-center border-b border-gray-200 py-2">
    <div class="text-gray-700">
      <strong><%= comment.user.email.split('@').first.capitalize %></strong> <%= comment.comment %>
    </div>
    <%= link_to 'Delete', post_comment_path(post_id: comment.post_id, id: comment.id), method: :delete, data: { turbo_method: :delete }, class: 'text-red-500 hover:text-red-700' %>
  </div>
<% end %>